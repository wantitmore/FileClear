<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.konka.fileclear.fragments.ClearMasterFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/last_clear_time" />
        <TextView
            android:id="@+id/tv_last_clear_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/last_clear_time" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/last_clear_space" />
        <TextView
            android:id="@+id/tv_last_clear_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/last_clear_space" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/total_clear_space" />
        <TextView
            android:id="@+id/tv_total_clear_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/total_clear_space" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_one_key_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_key_clear"
        />

</LinearLayout>
