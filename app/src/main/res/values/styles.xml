<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">56dp</item>
        <item name="android:textColor">@color/color_8fbeff</item>
    </style>

    <style name="stotage_situation">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_main" parent="text_base">
        <item name="android:focusable">true</item>
        <item name="android:layout_marginStart">56dp</item>
    </style>
    <style name="line_style">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/line</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="home_right_side_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">20sp</item>
    </style>
    <style name="btnStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/one_key_clean_sel</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
    
    <style name="space_control_img">
        <item name="android:background">@drawable/border_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>
    <style name="recyclerview_style">
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">54dp</item>
        <item name="android:layout_marginEnd">54dp</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>
